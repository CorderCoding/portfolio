<% include ../partials/header %>
<div class="ui inverted vertical center aligned segment">
  <% include ../partials/nav %>
  <div class="ui header">
    <h1>Account Page</h1>
    <h2>Welcome, <%= currentUser.username %>!</h2>
    <h2>This is where you can change your settings!</h2>
  </div>
</div>
<div id="account-items" class="ui grid">
  <form id="account-form" class="ui six wide column form" action="/user/<%= user.username %>?_method=PUT" method="POST">
    <div class="field">
      <label>Name:</label>
      <input type="text" name="user[displayName]" value="<%= user.name %>">
    </div>
    <div class="field">
      <label>Username:</label>
      <input type="text" name="user[username]" value=<%= user.username %>>
    </div>
    <div class="field">
      <label>Email:</label>
      <input type="text" name="user[email]" value=<%= user.email %>>
    </div>
    <div class="inline fields">
      <label for="recvEmails">Receive Emails?:</label>
      <div class="field">
        <div class="ui radio checkbox">
          <% if(user.recvEmails) { %>
            <input type="radio" name="user[recvEmails]" value=true checked="checked">
          <% } else { %>
            <input type="radio" name="user[recvEmails]" value=true>
          <% } %>
          <label>Yes, please!</label>
        </div>
      </div>
      <div class="field">
        <div class="ui radio checkbox">
          <% if(!user.recvEmails) { %>
            <input type="radio" name="user[recvEmails]" value=false checked="checked">
          <% } else { %>
            <input type="radio" name="user[recvEmails]" value=false>
          <% } %>
          <label>No way!</label>
        </div>
      </div>
    </div>
    <button class="ui green button">Save Changes</button>
  </form>
  <form id="password-form" class="ui six wide column form" action="/user/<%= user.username %>/pass?_method=PUT" method="POST">
    <div class="field">
      <label>Current Password:</label>
      <input type="password" name="curPassword" required>
    </div>
    <div class="field">
      <label>New Password:</label>
      <input type="password" name="newPassword" required>
    </div>
    <div class="field">
      <label>Confirm New Password:</label>
      <input type="password" name="confNewPass" required>
    </div>
    <button class="ui green button">Save New Password</button>
  </form>
</div>
<% include ../partials/footer %>
